{
  "$id": "http://schema.asemicanalytics.com/v1/semantic_layer/kpi.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "select",
    "x_axis"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "recommended": {
      "type": "boolean"
    },
    "select": {
      "type": "string"
    },
    "where": {
      "type": "string"
    },
    "unit": {
      "$ref": "http://schema.asemicanalytics.com/v1/semantic_layer/unit.json"
    },
    "x_axis": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "total_function": {
      "type": "string",
      "enum": [
        "sum",
        "avg",
        "min",
        "max",
        "count"
      ]
    },
    "hidden": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
